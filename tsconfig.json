{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "isolatedModules": true
  },
  "include": [
    "*.ts",
    "packages/*/jest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 